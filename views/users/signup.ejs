<% layout("/layouts/boilerplate") %>

<div class="row mt-3">

    <h1 > Sign Up For Urban Nest</h1>

    <div class="col-6" offset="3">

        <form action="/signup" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
        <lable for="username" class="form-label"> Username </lable>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback"> Looks good! </div>
        <div class="invalid-feedback"> Enter a catchy username </div>
      </div>



      <div class="mb-3">
        <lable for="email" class="form-label"> Email </lable>
        <input
          type="text"
          name="email"
          id="email"
          class="form-control"
          required
        />
        
      </div>







      <div class="mb-3">
        <lable for="password" class="form-label"> Password </lable>
        <input
          type="text"
          name="password"
          id="password"
          class="form-control"
          required
        />
        
      </div>


      <button class="btn btn-success">
        Sign Up
      </button>





      

         
        </form>

        </div>
        </div>