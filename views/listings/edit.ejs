

<% layout("/layouts/boilerplate") %>

  <div class="row mt-3">

    <div class="col-8" offset="2">

    

  
    <h4> Edit this Listing</h4>
     
    <form method ="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

         <div class="mb-3">
            <lable for ="title" class="form-label"> Title </lable>
               <input 
                type="text" 
                name="title"
                value = "<%= listing.title %>" 
                required
                class="form-control"
             />    
             <div class="valid-feedback"> Title looks good! </div>
             <div class="invalid-feedback"> Enter a catchy title </div>
        </div>

    

        


        <div class="mb-3">
            <lable for ="description" class="form-label"> Description </lable>
             <input type="text"
               name="description"
               value =" <%= listing.description %>"
               required
               class="form-control"
               />
               <div class="invalid-feedback"> Enter a short description</div>
        </div>

         
        


        <div class="mb-3">
            <lable for ="image" class="form-label"> Upload New Image </lable>
            <input 
              name="image"
              type="file"
              
             class="form-control"
             /> 
        </div>






       
     <div class="row">

        <div class="mb-3 col-md-4">
           <label for="price" class="form-label">Price</label>
             <input type="number" 
               name="price"
               value = "<%= listing.price %> "
               required
               class="form-control" 
               />
               <div class="invalid-feedback"> Enter a valid Price </div>
        </div>

    
        <div class="mb-3 col-md-8">
         <label for="country" class="form-label">Country</label>
          <input type="text" 
           name="country"
           value =" <%= listing.country %>"
           required
           class="form-control" 
           />
           <div class="invalid-feedback"> Enter a valid country </div>
        </div>

     </div>

     
 



      <div class="mb-3"> 
        <lable for ="location" class="form-label"> Location </lable>
        <input type="text" 
          name="location"
          value = " <%=listing.location %> "
          required
          class="form-control"
         />
         <div class="invalid-feedback"> Enter a valid location </div>
      </div>

        
     
        

        <button class ="btn btn-dark edit-btn mt-3"> EDIT </button>
        


    </form>



 </div>

</div>






