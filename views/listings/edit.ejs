

<% layout("/layouts/boilerplate") %>

  <div class="row mt-3">

    <div class="col-8" offset="2">

    

  
    <h4> Edit this Listing</h4>
     
    <form method ="POST" action="/listings/<%= listing._id %>?_method=PUT">

         <div class="mb-3">
            <lable for ="title" class="form-label"> Title </lable>
               <input 
                type="text" 
                name="title"
                value = "<%= listing.title %>" 
                class="form-control"
             />    
        </div>

    

        


        <div class="mb-3">
            <lable for ="description" class="form-label"> Description </lable>
             <input type="text"
               name="description"
               value =" <%= listing.description %>"
               class="form-control"
               />
        </div>

         
        


        <div class="mb-3">
            <lable for ="image" class="form-label"> Image Link </lable>
            <input type="text" 
              name="image"
              value = "<%=listing.image %>"
             class="form-control"
             /> 
        </div>






       
     <div class="row">

        <div class="mb-3 col-md-4">
           <label for="price" class="form-label">Price</label>
             <input type="number" 
               name="price"
               value = "<%= listing.price %> "
               class="form-control" />
        </div>

    
        <div class="mb-3 col-md-8">
         <label for="country" class="form-label">Country</label>
          <input type="text" 
           name="country"
           value =" <%= listing.country %>"
           class="form-control" />
        </div>

     </div>

     
 



      <div class="mb-3"> 
        <lable for ="location" class="form-label"> Location </lable>
        <input type="text" 
          name="location"
          value = " <%=listing.location %> "
          class="form-control"
         />
      </div>

        
     
        

        <button class ="btn btn-dark edit-btn mt-3"> Add </button>
        


    </form>



 </div>

</div>






